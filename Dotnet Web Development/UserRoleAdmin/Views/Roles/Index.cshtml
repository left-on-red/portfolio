@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@addTagHelper UserRoleAdmin.TagHelpers.*, UserRoleAdmin

<h1>All Roles</h1>

<div class="text-danger" asp-validation-summary="All"></div>

<table class="table table-sm table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Users</th>
        </tr>
    </thead>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No Roles</td></tr>
    } else {
        foreach (var role in Model){
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td style="border-top-style:hidden;border-right-style:hidden;border-bottom-style:hidden;">
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-outline-primary" asp-action="Create">Create</a>
