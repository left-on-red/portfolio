body {
	background-image: url(images/wrapper-bkgd.png);
	background-repeat: repeat-y;
	background-color: #DDD;
}

nav {	
	width: 120px;
}

nav ul {
	list-style: none;
}

nav ul li {
	margin-left: -45px;
	text-align: center;
	margin-bottom: 20px;
}

nav ul li a {
	text-decoration: none;
	color: #FFF;
	transition: all 0.5s;
}

nav ul li a:hover {
	color: #06F;	
}

#mainWindow {
	position: relative;
	left: 120px;
	width: 800px;	
}

#mainWindow section {
	display: block;
}

#mainWindow section img {
	display: block;	
}